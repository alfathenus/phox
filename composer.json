{
    "name": "mostofreddy/phox",
    "description": "A tool for simplifying the PHAR build, extract and signature process.",
    "version": "0.2.0",
    "keywords": ["Phar", "building", "package"],
    "homepage": "https://github.com/mostofreddy/phox",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com",
            "homepage": "http://www.mostofreddy.com.ar",
            "role": "Lead"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mostofreddy\\Phox\\": "src/"
        }
    },
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "*",
        "symfony/event-dispatcher": "*",
        "symfony/finder": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "bin": [
        "phox"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
